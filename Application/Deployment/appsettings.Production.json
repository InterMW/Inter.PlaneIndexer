{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "Application": {
        "Name": "Inter.PlaneIndexer",
        "Version": "0.0.0.0"
    },
    "Cors": {
        "AllowedHosts": [
            "*.centurionx.net"
        ]
    },
    "Timing": {
        "PlaneDocLifetimesSecs": 135
    },
    "AllowedHosts": "*",
    "PlaneHistoryContext": {
        "Uri": "#{ONPREM_REDIS}"
    },
    "Couchbase": {
        "Url": "couchbase://10.0.0.3",
        "Username": "actor",
        "Password": "#{COUCHBASE_PASSWORD}",
        "Bucket": "plane",
        "RamQuotaMB": 1000
    },
    "Rabbit": {
        "Scale": 1,
        "ClientDeclarations": {
            "Connections": [
                {
                    "Name": "Connection",
                    "ClientName": "Inter.PlaneIndexer",
                    "ServerName": "10.0.0.215",
                    "UserName": "dev_secure",
                    "Password": "#{RABBIT_PASSWORD}"
                }
            ],
            "AsyncRecievers": [
                {
                    "Name": "TickMessage",
                    "Connection": "Connection",
                    "Queue": "inter_plane_indexer_tick"
                },
                {
                    "Name": "CompletedPlaneFrameMessage",
                    "Connection": "Connection",
                    "Queue": "inter_plane_indexer_ingress"
                }
            ],
            "Publishers": [
                {
                    "Name": "MetricMessage",
                    "Connection": "Connection",
                    "Exchange": "InterTopic"
                }
            ]
        },
        "ServerDeclarations": {
            "Exchanges": [
                {
                    "Name": "Clock",
                    "Type": "Topic",
                    "AutoDelete": "False",
                    "Durable": "True",
                    "Connection": "Connection"
                },
                {
                    "Name": "InterTopic",
                    "Type": "Topic",
                    "AutoDelete": "False",
                    "Durable": "True",
                    "Connection": "Connection"
                }
            ],
            "Bindings": [
                {
                    "Queue": "inter_plane_indexer_tick",
                    "Connection": "Connection",
                    "Exchange": "Clock",
                    "SubscriptionKey": "tick.minute"
                },
                {
                    "Queue": "inter_plane_indexer_ingress",
                    "Connection": "Connection",
                    "Exchange": "InterTopic",
                    "SubscriptionKey": "planeframe.complete"
                }
            ],
            "Queues": [
                {
                    "Name": "inter_plane_indexer_tick",
                    "Connection": "Connection",
                    "AutoDelete": "True",
                    "Durable": "False",
                    "Exclusive": "False"
                },
                {
                    "Name": "inter_plane_indexer_ingress",
                    "Connection": "Connection",
                    "AutoDelete": "True",
                    "Durable": "False",
                    "Exclusive": "False"
                }
            ]
        }
    }
}
